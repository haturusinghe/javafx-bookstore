<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="685.0" prefWidth="1030.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.GenReport.GenerateReportController">
    <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="95.0" prefWidth="1030.0" style="-fx-background-color: white;">
                <children>
                    <JFXButton fx:id="generateBtn" minHeight="25.0" minWidth="100.0" onAction="#generateMonthly" styleClass="custom-buttons-1" text="Generate Reports">
                        <graphic>
                            <FontIcon fill="WHITE" iconLiteral="anto-plus-circle" iconSize="20" selectionFill="BLACK" />
                        </graphic>
                    </JFXButton>
                    <JFXButton fx:id="yearlyBtn" minHeight="25.0" minWidth="100.0" onAction="#generateYearly" styleClass="custom-buttons-1" text="Generate Yearly">
                        <graphic>
                            <FontIcon fill="WHITE" iconLiteral="anto-plus-circle" iconSize="20" selectionFill="BLACK" />
                        </graphic>
                    </JFXButton>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </HBox>
            <MFXTableView fx:id="reportsTable" fixedRowsHeight="40.0" maxHeight="600.0" maxRowsPerPage="10" maxWidth="1000.0" minHeight="600.0" />

    </children>
</VBox>
