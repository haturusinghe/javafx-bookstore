<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="600.0" stylesheets="@styles/inventory-page.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.inventory.InventoryController">
   <children>
      <StackPane fx:id="stackPane" prefHeight="684.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <JFXDrawer fx:id="drawer" defaultDrawerSize="300.0" direction="RIGHT" onDrawerClosing="#hideDrawer" prefHeight="368.0" prefWidth="108.0" />
                  <VBox alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #fff;">
                           <children>
                              <TextField fx:id="search_txt" onKeyTyped="#searchTable" promptText="Search" />
                              <ComboBox fx:id="category_combo" onAction="#filterTableCategory" prefWidth="150.0" promptText="Select Category" />
                              <Button fx:id="outStockBtn" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#viewOutOfStock" styleClass="custom-buttons-1" text="Out of Stock" />
                              <Button fx:id="lowStockBtn" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#viewLowOnStock" styleClass="custom-buttons-1" text="Low on Stock" />
                              <Button fx:id="resetFilterBtn" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#resetFilters" styleClass="custom-buttons-1" text="Reset Filters" />
                              <Button fx:id="addNewEntryBtn" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#addNewEntry" styleClass="custom-buttons-1" text="Add New Entry" />

                           </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                        </HBox>
                        <TableView fx:id="inventoryTable" onMouseClicked="#selectItem" prefHeight="626.0" prefWidth="600.0">
                          <columns>
                            <TableColumn fx:id="colBookId" prefWidth="75.0" text="Book ID" />
                            <TableColumn fx:id="colListedPrice" prefWidth="75.0" text="Listed Price" />
                              <TableColumn fx:id="colQty" prefWidth="75.0" text="Quantity" />
                              <TableColumn fx:id="colMin" prefWidth="75.0" text="Minimum " />
                              <TableColumn fx:id="colUpdate" prefWidth="75.0" text="Update Details" />
                              <TableColumn fx:id="colViewDet" prefWidth="75.0" text="View Book" />
                              <TableColumn fx:id="colDelete" prefWidth="75.0" text="Delete Entry" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
