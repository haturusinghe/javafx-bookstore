<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.inventory.InventoryController">
   <children>
      <StackPane fx:id="stackPane">
         <children>
            <JFXDrawer fx:id="drawer" defaultDrawerSize="600.0" direction="RIGHT" onDrawerClosing="#hideDrawer" prefHeight="368.0" prefWidth="108.0" />
                  <VBox alignment="CENTER" style="-fx-background-color: blue;">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Button fx:id="addNewEntryBtn" mnemonicParsing="false" onAction="#addNewEntry" text="Add New Entry" />
                              <Button  mnemonicParsing="false" onAction="#showNotification" text="Show Notification" />
                              <TextField fx:id="search_txt" onKeyTyped="#searchTable" promptText="Search" />
                              <ComboBox fx:id="category_combo" onAction="#filterTableCategory" prefWidth="150.0" />
                              <Button fx:id="outStockBtn" mnemonicParsing="false" onAction="#viewOutOfStock" text="Out of Stock" />
                              <Button fx:id="lowStockBtn" mnemonicParsing="false" onAction="#viewLowOnStock" text="Low on Stock" />
                              <Button fx:id="resetFilterBtn" mnemonicParsing="false" onAction="#resetFilters" text="Reset Filters" />
      <!--                               <VBox fx:id="drawerBox" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="465.0" prefWidth="180.0" style="-fx-background-color: #435;" translateX="-180.0" HBox.hgrow="NEVER" />-->
                           </children>
                        </HBox>
                        <TableView fx:id="inventoryTable" onMouseClicked="#selectItem" prefHeight="400.0" prefWidth="600.0">
                          <columns>
                            <TableColumn fx:id="colBookId" prefWidth="75.0" text="Book ID" />
                            <TableColumn fx:id="colListedPrice" prefWidth="75.0" text="Listed Price" />
                              <TableColumn fx:id="colQty" prefWidth="75.0" text="Quantity" />
                              <TableColumn fx:id="colMin" prefWidth="75.0" text="Minimum " />
                              <TableColumn fx:id="colUpdate" prefWidth="75.0" text="Update Details" />
                              <TableColumn fx:id="colViewDet" prefWidth="75.0" text="View Book" />
                              <TableColumn fx:id="colDelete" prefWidth="75.0" text="Delete Entry" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
