<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" maxHeight="685.0" maxWidth="1030.0" prefHeight="685.0" prefWidth="1030.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.NewCustomer.NewCustomerController">
    <children>
        <StackPane fx:id="stackPane" prefHeight="684.0" prefWidth="600.0" stylesheets="@styles/emp-page.css" VBox.vgrow="ALWAYS">
            <children>
                <JFXDrawer fx:id="drawer" defaultDrawerSize="500.0" direction="RIGHT" onDrawerClosing="#hideDrawer" />
                <VBox alignment="BOTTOM_CENTER">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="95.0" prefWidth="1030.0">
                            <children>
                                <JFXButton fx:id="m_addNewEntryBtn" minHeight="25.0" minWidth="100.0" onAction="#addNewEntry" styleClass="custom-buttons-1" text="Add New Customer">
                                    <graphic>
                                        <FontIcon fill="WHITE" iconLiteral="anto-plus-circle" iconSize="20" />
                                    </graphic>
                                </JFXButton>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                  <VBox alignment="CENTER_RIGHT">
                     <children>
                              <MFXTableView fx:id="customerTable" fixedRowsHeight="40.0" maxHeight="685.0" maxRowsPerPage="10" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" />
                     </children>
                  </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>

    </children>
</VBox>
