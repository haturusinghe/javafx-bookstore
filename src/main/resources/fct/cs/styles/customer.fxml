<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.Customer.CustomController" style="-fx-background-color: #fff;">
    <children>
        <HBox alignment="CENTER" prefHeight="124.0" prefWidth="846.0" >
            <children>
                <Label text="Customers">
                    <HBox.margin>
                        <Insets right="50.0" />
                    </HBox.margin>
                </Label>
                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#prepareAddCustomer" text="Add" />
            </children>
        </HBox>
        <HBox layoutX="10.0" layoutY="110.0" prefHeight="472.0" prefWidth="830.0">
            <children>
                <VBox>
                    <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <TextField fx:id="search_txtField" onKeyTyped="#searchCustomers" promptText="Search Customers"/>
                                <ComboBox fx:id="categoryCombo" onAction="#filterCustomers" prefWidth="150.0" />
                            </children>
                        </HBox>
                        <TableView fx:id="customerTable" onMouseClicked="#selectCustomer" prefHeight="466.0" prefWidth="435.0">
                            <columns>
                                <TableColumn fx:id="colcustomer_id" prefWidth="75.0" text="Customer ID" />
                                <TableColumn fx:id="colcustomer_name" prefWidth="75.0" text="Customer Name" />
                                <TableColumn fx:id="collocation" prefWidth="75.0" text="Customer Location" />
                                <TableColumn fx:id="colmobile" prefWidth="75.0" text="Phone Number" />
                                <TableColumn fx:id="colemail" prefWidth="75.0" text="Email" />
                                <TableColumn fx:id="colEdit" prefWidth="75.0" text="Edit" visible="false" />
                                <TableColumn fx:id="colRemove" prefWidth="75.0" text="Remove" visible="false" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                <VBox alignment="CENTER" layoutY="53.0" prefHeight="466.0" prefWidth="395.0" style="-fx-background-color: white;" >
                    <children>
                        <HBox alignment="CENTER" prefHeight="74.0" prefWidth="400.0">
                            <children>
                                <Label fx:id="headerLabel" text="Customer Details">
                                    <HBox.margin>
                                        <Insets right="50.0" />
                                    </HBox.margin>
                                </Label>
                                <Button fx:id="editCustBtn" mnemonicParsing="false" onAction="#editCustomer" text="Edit" visible="false" />
                            </children>
                        </HBox>
                        <VBox fx:id="customer_details_vbox" alignment="CENTER" disable="true" prefHeight="354.0" prefWidth="400.0" styleClass="customerDetailsPanel" stylesheets="/fct/cs/styles/disable.css">
                            <children>
                                <HBox alignment="CENTER" layoutX="10.0" layoutY="13.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Customer ID" />
                                                <TextField fx:id="customer_id_txtField" onKeyTyped="#showUpdateBtn" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <Separator layoutX="10.0" layoutY="163.0" prefWidth="200.0" />
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Customer Name" />
                                                <TextField fx:id="customer_name_txtField" onKeyTyped="#showUpdateBtn" />
                                            </children>
                                        </VBox>
                                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                                        </children>
                                </HBox>
                                <Separator prefWidth="200.0" />
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Email" />
                                                <TextField fx:id="email_txtField" onKeyTyped="#showUpdateBtn" />
                                            </children>
                                        </VBox>
                                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                                        <VBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Phone Number" />
                                                <TextField fx:id="mobile_txtField" onKeyTyped="#showUpdateBtn" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <Separator prefWidth="200.0" />
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Location" />
                                                <TextField fx:id="location_txtField" onKeyTyped="#showUpdateBtn" />
                                            </children>
                                        </VBox>
                                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updateCustomer" text="Update" visible="false" />
                                <Button fx:id="removeBtn" mnemonicParsing="false" onAction="#removeCustomer" text="Remove" visible="false" />
                                <Button fx:id="addNewBtn" mnemonicParsing="false" onAction="#addNewCustomer" text="Add New Customer" visible="false" />
                                <Button fx:id="cancelNewBtn" mnemonicParsing="false" onAction="#cancelNewCustomer" text="Cancel" visible="false" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>