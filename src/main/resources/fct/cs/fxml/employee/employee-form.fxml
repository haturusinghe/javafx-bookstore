                        </MFXCheckbox>
                     </children>
                  </VBox>
               </children>
            </HBox>-->
      </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
   </VBox>
   <HBox alignment="CENTER" prefHeight="43.0" prefWidth="400.0" spacing="20.0">
      <children>
         <MFXButton fx:id="submitBtn" onAction="#updateEmployee" styleClass="bottomButtons" text="Submit">
            <graphic>
               <FontIcon iconLiteral="cil-taxi" iconSize="20" />
            </graphic>
         </MFXButton>
         <MFXButton fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancel" styleClass="bottomButtons" text="Cancel"> <graphic>
            <FontIcon iconLiteral="cil-yen" iconSize="20" />
         </graphic></MFXButton>
      </children>
   </HBox>
</children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</VBox>
