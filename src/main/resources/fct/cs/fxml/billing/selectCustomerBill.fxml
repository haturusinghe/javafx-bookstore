<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXLabel?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="680.0" minHeight="680.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fct.cs.Bill.SelectCustomerController">
   <children>
      <HBox minHeight="50.0">
         <children>
            <MFXLabel prefHeight="47.0" prefWidth="141.0" text="Select Customer :">
               <font>
                  <Font size="29.0" />
               </font>
            </MFXLabel>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" minHeight="50.0" prefHeight="34.0" prefWidth="526.0" spacing="10.0">
         <children>
            <MFXButton buttonType="RAISED" depthLevel="LEVEL1" onAction="#addCustomer" prefHeight="35.0" prefWidth="168.0" text="Add New Customer">
               <font>
                  <Font size="14.0" />
               </font>
            </MFXButton>
            <TextField fx:id="searchCustomer" prefHeight="35.0" prefWidth="178.0" />
            <MFXButton fx:id="search" buttonType="RAISED" depthLevel="LEVEL1" onAction="#searchCustomer" prefHeight="35.0" prefWidth="94.0" text="Search" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="customerTable" prefHeight="602.0" prefWidth="526.0">
        <columns>
          <TableColumn fx:id="id" prefWidth="44.0" text="ID" />
          <TableColumn fx:id="name" minWidth="0.0" prefWidth="121.60003280639648" text="Customer Name" />
            <TableColumn fx:id="mobile" prefWidth="102.40003967285156" text="Mobile" />
            <TableColumn fx:id="email" prefWidth="156.79998779296875" text="Email" />
            <TableColumn fx:id="SelectCustomer" prefWidth="96.79998779296875" />
        </columns>
      </TableView>
   </children>
</VBox>
